{
  "emulators": {
    "ui": {
      "enabled": true,
      "port": 4405
    },
    "auth": {
      "port": 9156
    },
    "firestore": {
      "port": 8086
    },
    "singleProjectMode": true,
    "apphosting": {
      "port": 5003,
      "rootDirectory": "./",
      "startCommand": "npm run dev"
    },
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9001
    },
    "hosting": {
      "port": 5004
    },
    "storage": {
      "port": 9200
    },
    "eventarc": {
      "port": 9300
    },
    "dataconnect": {
      "port": 9400,
      "dataDir": "dataconnect/.dataconnect/pgliteData"
    },
    "tasks": {
      "port": 9500
    }
  },
  "dataconnect": {
    "source": "./dataconnect"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "database": "(default)",
    "location": "asia-south1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
